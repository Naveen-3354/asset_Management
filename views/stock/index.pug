doctype html
html(lang="en")
  head
    title Asset Management Stocks
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
    script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js")
    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    script(src="https://code.jquery.com/jquery-3.7.1.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js")
    script(src="https://cdn.datatables.net/2.1.8/js/dataTables.js")
    script(src="https://cdn.datatables.net/2.1.8/js/dataTables.bootstrap5.js")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdn.datatables.net/2.1.8/css/dataTables.bootstrap5.css")
  body
    .container-fluid
        include ../components/navbar.pug 
      
    div(class="container mt-5")
        h1.text-center Category Details
        table.table.table-bordered.table-striped.mt-4
            tbody
              tr
                td(scope="row") Id
                td= assetCategory.id

              tr
                td(scope="row") Name
                td= assetCategory.name
                
              tr
                td(scope="row") Description
                td= assetCategory.description
              
              tr
                td(scope="row") Status
                td= assetCategory.status
    
    div(class="container mt-5")
        h1.text-center Product Details
        table.table.table-bordered.table-striped.mt-4
            tbody
              tr
                td(scope="row") Id
                td= asset.id

              tr
                td(scope="row") Serial Number
                td= asset.serialNumber
                
              tr
                td(scope="row") Make
                td= asset.make
              
              tr
                td(scope="row") Model
                td= asset.model

              tr
                td(scope="row") Purchase Date
                td= asset.purchaseDate
                
              tr
                td(scope="row") Warranty Date
                td= asset.warrantyExpiryDate

              tr
                td(scope="row") Status
                td= asset.status

    

    div(class="container mt-5")
        h1.text-center Asset Issue Details
        table.table.table-bordered.table-striped.mt-4
            tbody
              tr
                td(scope="row") Total Stock
                td= asset.totalStock

              tr
                td(scope="row") Available Stock
                td= asset.availableStock
                
              tr
                td(scope="row") Return Stock
                td= asset.totalStock - asset.availableStock
              
              tr
                td(scope="row") Scrap
                td= asset.scrapStock
    
    div(class="container mt-5")
      a(href='/assetIssue/issue',class='btn btn-primary', style='height:fit-content')= "Issue New"

    include ../components/footer.pug
        
